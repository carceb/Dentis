@model Dentis.Models.ClientViewModel
@{
	Layout = "";
}
<!DOCTYPE HTML>
<html>
	<head>
		<title>Dentis</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
		<link rel="stylesheet" href="~/assets/css/main.css" />
		<noscript><link rel="stylesheet" href= "~/assets/css/noscript.css" /></noscript>
	</head>
	<body class="is-preload">
	@using(Html.BeginForm("Edit", "Client", FormMethod.Post))
	{
		<!-- Wrapper -->
		<div id="wrapper">

			<!-- Header -->
			  <header id="header">
				<div class="inner">

				  <!-- Logo -->
					<a href="index.html" class="logo">
					  <span class="symbol"><img src="~/images/logo.svg" alt="" /></span><span class="title">Dentis</span>
					  <br />
					  <span class="title">@ViewBag.ConsultingName</span>
					</a>
				</div>
				<!-- Nav -->
				  <nav>
					<ul>
					  <li><a href="#menu">Menu</a></li>
					</ul>
				  </nav>
			  </header>

			<!-- Menu -->
			  <nav id="menu">
				<h2>Menu</h2>
				<ul>
				  <li>@Html.ActionLink("Seleccionar cliente", "SelectClient", "Client")</li>
				  <li>@Html.ActionLink("Registrar paciente", "Add", "PatientRegistration")</li>
				  <li>@Html.ActionLink("Pacientes en cola", "Index", "Queue")</li>
				  <li>@Html.ActionLink("Seleccionar consultorio", "Index", "ConsultingSelection")</li>
				  <li>@Html.ActionLink("Salir", "Index", "Login")</li>
				</ul>
			  </nav> 

				<!-- Main -->
					<div id="main">
						<div class="inner">
							<!-- Form -->
								<section>
									<h5>Modificar cliente</h5>
									<br/>
									<br/>

										<div class="row gtr-uniform">
											<div class="col-6 col-12-xsmall">
											  <strong>Cédula:</strong>
											  @Html.HiddenFor(x=> x.ClientId)
											  @Html.TextBoxFor(x => x.IdentificationNumber, new { @readonly = true})  
											</div>
											<div class="col-6 col-12-xsmall">
											  <strong>Nombre:</strong>
											  @Html.TextBoxFor(x => x.ClientName, new { placeholder = "Nombre"})
											   <span asp-validation-for="ClientName" class="text-danger"></span>
											</div>
											<div class="col-12">
											  <strong>Genero:</strong>
											  @Html.DropDownListFor(t => t.Gender, (SelectList)ViewBag.Gender)
											</div>
											<div class="col-6 col-12-xsmall">
											  <strong>Fecha de nacimiento:</strong>
											  @Html.TextBoxFor(m => m.BirthDate, new { @class = "getdate", @readonly = true })
											   <span asp-validation-for="BirthDate" class="text-danger"></span>
											</div>
											<div class="col-6 col-12-xsmall">
											  <strong>Teléfono:</strong>
											  @Html.TextBoxFor(x => x.ClientCellPhone, new { placeholder = "Número de Teléfono"})
											</div>
											<div class="col-12">
											  <strong>Email:</strong>
											  @Html.TextBoxFor(x => x.ClientEmail, new { placeholder = "Email"})
											</div>
											<div class="col-12">
											  <strong>Dirección:</strong>
											  @Html.TextAreaFor(x => x.ClientAddress, new { placeholder = "Dirección"})
											</div>
											<div class="col-12">
												<ul class="actions">
													<li><input type="submit" value="Actualizar" class="primary" /></li>
													<li><input type="button" value="Listar presupuestos"  onclick="location.href='@Url.Action("ListBudgets", "Budget", new {@clientId = Model.ClientId})'" /></li>
												</ul>
											</div>
										</div>
								</section>
						</div>
					</div>

				<!-- Footer -->
					<footer id="footer">
						<div class="inner">
						</div>
					</footer>
		</div>	
	}
			<!-- Scripts -->
			<script src="~/assets/js/jquery.min.js"></script>
			<script src="~/assets/js/browser.min.js"></script>
			<script src="~/assets/js/breakpoints.min.js"></script>
			<script src="~/assets/js/util.js"></script>
			<script src="~/assets/js/main.js"></script>
			<link rel="stylesheet" href="~/lib/bootstrap/dist/css/4.1.0/bootstrap-datepicker.min.css" />
			<link rel="stylesheet" href="~/lib/bootstrap/dist/css/4.1.0/bootstrap.min.css" />
			<script src="~/lib/bootstrap/dist/js/bootstrap-datepicker.min.js"></script>
			  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
			<script>
			  $(document).ready(function () {
				$(".getdate").each(function () {
				  $(this).datepicker({ format: 'dd/mm/yyyy' });
				});
			  });
			</script>
	</body>
</html>

