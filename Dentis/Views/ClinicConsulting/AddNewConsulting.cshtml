@model Dentis.Models.ClinicConsultingViewModel
@{
	Layout = "";    
}
<!DOCTYPE HTML>
<html>
	<head>
		<title>Dentis</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
		<link rel="stylesheet" href="~/assets/css/main.css" />
		<noscript><link rel="stylesheet" href= "~/assets/css/noscript.css" /></noscript>
	</head>
	<body class="is-preload">
	@using(Html.BeginForm("Add", "ClinicConsulting", FormMethod.Post))
	{
	<!-- Wrapper -->
			<div id="wrapper">

			<!-- Header -->
				<header id="header">
					<div class="inner">
						<!-- Logo -->
							<a href="index.html" class="logo">
								<span class="symbol"><img src="~/images/logo.svg" alt="" /></span><span class="title">Dentis</span>
							</a>

					</div>

				<!-- Nav -->
					<nav>
						<ul>
							<li><a href="#menu">Menu</a></li>
						</ul>
					</nav>
			</header>

			<!-- Menu -->
			  <nav id="menu">
				<h2>Menu</h2>
				<ul>
				  <li>@Html.ActionLink("Agregar Cliníca","Add","Clinic")</li>
				  <li>@Html.ActionLink("Ajustes", "Index", "Setting")</li>
				  <li>@Html.ActionLink("Salir", "Index", "Login")</li>
				</ul>
			  </nav> 

				<!-- Footer -->
					<footer id="footer">
						<div class="inner">
							<section>
								<h2>Indique los datos del Consultorio</h2>
									<div class="fields">
										<div class="field half">
											<strong>Clínica:</strong>
											@Html.DropDownListFor(t => t.ClinicId, (SelectList)ViewBag.Clinic, "-- Seleccione la Clínica --")
										</div>
										<div class="field half">
											<strong>Nombre Consultorio:</strong>
											@Html.TextBoxFor(x => x.ClinicConsultingName, new { placeholder = "Nombre del Consultorio"})
											 <span asp-validation-for="ClinicConsultingName" class="text-danger"></span>
										</div>
										<div class="field half">
											<strong>Teléfono:</strong>
											@Html.TextBoxFor(x => x.ClinicConsultingPhone, new { placeholder = "Telefonos"})
										</div>
									</div>
									<br>
									<ul class="actions">
										<li><input type="submit" value="Actualizar" class="primary" /></li>
									</ul>
								</section>
							<ul class="copyright">
								<li>&copy; Untitled. All rights reserved</li>
							</ul>
						</div>
					</footer>
			</div>	
	}

		<!-- Scripts -->
			<script src="~/assets/js/jquery.min.js"></script>
			<script src="~/assets/js/browser.min.js"></script>
			<script src="~/assets/js/breakpoints.min.js"></script>
			<script src="~/assets/js/util.js"></script>
			<script src="~/assets/js/main.js"></script>
			@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
	</body>
</html>

