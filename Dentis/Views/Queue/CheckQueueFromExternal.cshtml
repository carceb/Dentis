@model List<Dentis.Models.Queue> 
@{
	Layout = "";   
}

<!DOCTYPE HTML>
<html>
	<head>
		<title>Dentis - Pacientes en cola</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
		<link rel="stylesheet" href="~/assets/css/main.css" />
		<noscript><link rel="stylesheet" href="~/assets/css/noscript.css" /></noscript>

		<style>
			.myDiv {
			  border: 5px outset red;
			  background-color: lightblue;
			  text-align: center;
			}
		</style>

	</head>
	<body class="is-preload">
			<div id="confirmDialog" class="myDiv"  title="Remove Assignment" hidden>
					<p>Do you want to save changes </p>
			</div>
		<!-- Wrapper -->
			<div id="wrapper">
				<!-- Header -->
					<header id="header">
						<div class="inner">
							<!-- Logo -->
								<a href="#" class="logo">
									<span class="symbol"><img src="~/images/logo.svg" alt="" /></span><span class="title">Dentis</span>
									<br />
									<span class="title">@ViewBag.ClinicConsultingName</span>	
								</a>

							<!-- Nav -->
								<nav>
									<ul>
										<li><a href="#menu">Menu</a></li>
									</ul>
								</nav>
						</div>
					</header>

				<!-- Menu -->
					<nav id="menu">
						<h2>Menu</h2>
						<ul>
							<li>@Html.ActionLink("Actualizar cola", "CheckQueueFromExternal", "Queue", new { clinicConsultingId = @ViewBag.ClinicConsultingId })</li>	
						</ul>
					</nav>

				<!-- Main -->
					<div id="main">
						<div class="inner">
							<!-- Table -->
								<section>
									<h2>Pacientes en cola</h2>
									<div>
										Ultima actualización: @DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")
										<br/>
										<br/>
										<input type="button" value="Actualizar cola" class="primary"  onclick="location.href='@Url.Action("CheckQueueFromExternal", "Queue", new { clinicConsultingId = @ViewBag.ClinicConsultingId })'" />
										<br/>
										<br/>
									</div>									
									<div class="table-wrapper">
										<table>
											<thead>
												<tr>
													<th>#</th>
													<th>Paciente</th>
													<th>Genero</th>
													<th>Edad</th>
													<th>Motivo de Consulta</th>
													<th>Estatus</th>
												</tr>
											</thead>
											<tbody>
												@{
													int counter = 0;
												}
												@foreach (var queue in Model)
												{
													counter++; 
													<tr>
														<td>@counter</td>
														<td>@queue.PatientName</td>
														<td>@queue.PatientGender</td>
														<td>@queue.PatientAge</td>
														<td>@queue.AppointmentReasonName</td>													
														<td>@queue.QueueStatusName</td>													
													</tr>
												}
											</tbody>
										</table>
									</div>
									<br>
								</section>
						</div>
					</div>

				<!-- Footer -->
			</div>

		<!-- Scripts -->
			<script src="~/assets/js/jquery.min.js"></script>
			<script src="~/assets/js/browser.min.js"></script>
			<script src="~/assets/js/breakpoints.min.js"></script>
			<script src="~/assets/js/util.js"></script>
			<script src="~/assets/js/main.js"></script>
	</body>
</html>

